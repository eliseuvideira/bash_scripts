PROGNAME="${0##*/}"

usage() {
  echo "$PROGNAME: usage: $PROGNAME KEY_PATH"
}

if [[ "$#" -ne 1 ]]; then
  usage
  exit 1
fi

KEY_PATH=${1%/}

openssl genrsa \
  -out "$KEY_PATH/private.key" 2048

openssl rsa \
  -in "$KEY_PATH/private.key" \
  -outform PEM \
  -pubout \
  -out "$KEY_PATH/public.pem"
